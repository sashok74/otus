# Можно выбрать базовый стиль, например, LLVM или Google
BasedOnStyle: LLVM

# Основной отступ – 4 пробела
IndentWidth: 4

# Ограничение длины строки (можно менять по необходимости)
ColumnLimit: 100

# Выравнивание параметров функции/конструктора по позиции открывающей скобки
AlignAfterOpenBracket: Align

# Не упаковывать параметры в одну строку (если они не вмещаются, то каждый с новой строки)
BinPackParameters: false

# Разбивать список инициализации конструктора так, чтобы двоеточие переносилось на отдельную строку
BreakConstructorInitializers: BeforeColon

# Отступ для членов списка инициализации (в примере – дополнительное смещение на 2 пробела)
ConstructorInitializerIndentWidth: 2

# Для функции и других блоков ставим открывающую скобку на новую строку.
BreakBeforeBraces: Allman